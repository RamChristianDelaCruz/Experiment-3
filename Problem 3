#include<iostream>

using namespace std;

int main()
{
int size,i,j,x;
char character[10];
cout<<"Enter Array Size: "; cin>> size;

cout<<"Enter "<<size<< " characters: ";

for (i=0;i<size;i++){

cin>>character[i];
}
cout<< "The array size is "<<size<<endl;
cout<< "What you entered in reverse is: ";

for (i = size;i>0;i--){

cout<< character[i-1]<<" ";
}


return 0;
}
