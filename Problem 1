#include<iostream>

using namespace std;

int main()
{

int array[10],i,sum=0,average;

cout<<"Enter values: "; 

for (i=0;i<10;i++){
cin>>array[i];
}
cout<<endl;


for(i=0;i<10;i++){
sum = sum+array[i];
average = sum/10;
	
}
cout<<"The sum of the 10 numbers is: "<<sum<<endl;
cout<<"The average of the 10 numbers is: "<<average;

return 0;
}
